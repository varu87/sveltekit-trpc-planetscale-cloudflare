// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator kysely {
  provider = "prisma-kysely"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String     @id @default(cuid())
  firstname String?
  lastname  String?
  email     String
  isActive  Boolean
  UserHome  UserHome[]
}

model Home {
  id           String     @id @default(cuid())
  name         String
  isActive     Boolean
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  postcode     String?
  country      String?
  UserHome     UserHome[]
}

model UserHome {
  userId String
  homeId String
  role   UserHomeRoles

  home Home @relation(fields: [homeId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@id([userId, homeId, role])
  @@index(userId)
  @@index(homeId)
}

enum UserHomeRoles {
  OWNER
  MEMBER
}
